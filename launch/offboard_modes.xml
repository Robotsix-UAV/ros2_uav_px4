<launch>
      <!-- Define a launch argument for the namespace -->
      <arg name="uav_namespace" default="/uav0"/>

      <!-- Node for the parameter server -->
      <node pkg="ros2_uav_parameters"
            exec="parameter_server"
            namespace="$(var uav_namespace)"
            output="screen">
      </node>

      <!-- Node for modes runner -->
      <node pkg="ros2_uav_px4"
            exec="modes_runner"
            namespace="$(var uav_namespace)"
            output="screen">
      </node>

      <!-- Node for tf publisher -->
      <node pkg="ros2_uav_px4"
            exec="tf_publisher"
            namespace="$(var uav_namespace)"
            output="screen">
      </node>
</launch>
